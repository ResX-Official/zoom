{
  "appId": "com.yoom.desktop",
  "productName": "Yoom",
  "directories": { "output": "dist-electron" },
  "files": [
    "dist/**/*",
    "public/**/*",
    "package.json",
    "next.config.mjs",
    "tailwind.config.ts",
    "tsconfig.json",
    "postcss.config.js",
    "components.json",
    "electron/**/*",
    "node_modules/**/*"
  ],
  "extraResources": [{ "from": "public", "to": "public" }],
  "win": {
    "target": [
      { "target": "nsis", "arch": ["x64"] },
      { "target": "portable", "arch": ["x64"] }
    ],
    "icon": "public/icons/logo.ico",
    "requestedExecutionLevel": "asInvoker",
    "artifactName": "Yoom-Setup-${version}.${ext}"
  },
  "nsis": {
    "oneClick": true,
    "allowElevation": true,
    "runAfterFinish": true,
    "allowToChangeInstallationDirectory": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Yoom",
    "installerIcon": "public/icons/logo.ico",
    "uninstallerIcon": "public/icons/logo.ico",
    "installerHeaderIcon": "public/icons/logo.ico",
    "deleteAppDataOnUninstall": false
  },
  "portable": { "artifactName": "Yoom-Portable-${version}.${ext}" }
}
