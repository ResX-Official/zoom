{
  "name": "yoom-desktop",
  "version": "1.0.0",
  "description": "Yoom - A modern video conferencing application for desktop",
  "main": "electron/main.js",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "electron-build": "npm run build && electron-builder",
    "electron-build-win": "npm run build && electron-builder --win",
    "electron-build-mac": "npm run build && electron-builder --mac",
    "electron-build-linux": "npm run build && electron-builder --linux",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-win": "npm run build && electron-builder --win --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.yoom.desktop",
    "productName": "Yoom",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "package.json",
      "next.config.mjs",
      "tailwind.config.ts",
      "tsconfig.json",
      "postcss.config.js",
      "components.json",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icons/logo.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "Yoom-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "allowElevation": true,
      "runAfterFinish": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Yoom",
      "installerIcon": "public/icons/logo.ico",
      "uninstallerIcon": "public/icons/logo.ico",
      "installerHeaderIcon": "public/icons/logo.ico",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "Yoom-Portable-${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icons/logo.icns",
      "category": "public.app-category.video"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icons/logo.png",
      "category": "Network"
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "zoom-clone"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "keywords": [
    "video-conferencing",
    "zoom-clone",
    "electron",
    "desktop-app"
  ],
  "author": "Yoom Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/zoom-clone.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/zoom-clone/issues"
  },
  "homepage": "https://github.com/your-username/zoom-clone#readme"
}
