{
  "name": "zoom-desktop",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare-deploy": "bash scripts/deploy.sh",
    "build-electron": "npm run build && npx electron-builder --win portable --publish=never",
    "build-installer": "bash scripts/build-perfect-installer.sh"
  },
  "dependencies": {
    "@clerk/nextjs": "^5.0.0-beta.35",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@stream-io/node-sdk": "^0.1.12",
    "@stream-io/video-react-sdk": "^0.5.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.4.0",
    "lucide-react": "^0.350.0",
    "next": "14.1.3",
    "react": "^18",
    "react-datepicker": "^6.3.0",
    "react-dom": "^18",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-datepicker": "^6.2.0",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-tailwindcss": "^3.14.3",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  },
  "description": "Zoom - Video Conferencing Application",
  "main": "electron/main.js",
  "build": {
    "appId": "com.zoom.desktop",
    "productName": "Zoom",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "package.json",
      "next.config.mjs",
      "tailwind.config.ts",
      "tsconfig.json",
      "postcss.config.js",
      "components.json",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "Zoom-Setup-${version}.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": true,
      "allowElevation": true,
      "runAfterFinish": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Zoom",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "Zoom-Setup-${version}.${ext}",
      "requestExecutionLevel": "user"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icons/logo.icns",
      "category": "public.app-category.video"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icons/logo.png",
      "category": "Network"
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "zoom-clone"
    }
  }
}